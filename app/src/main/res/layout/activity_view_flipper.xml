<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context=".ViewPager"
    >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#000000">
    </android.support.v4.view.ViewPager>

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="@string/view_flipper_login"
        android:id="@+id/view_flipper_login_btn"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/view_flipper_register_btn"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:gravity="center"
        android:textSize="17sp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="@string/view_flipper_register"
        android:id="@+id/view_flipper_register_btn"
        android:layout_marginBottom ="54dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:gravity="center"
        android:textSize="17sp"/>

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/view_flipper_login_btn"
        android:layout_alignTop="@+id/view_flipper_login_btn"
        android:background="@android:color/transparent"/>
</RelativeLayout>
